{
  "name": "@figma/code-connect",
  "version": "0.1.2",
  "description": "A tool for connecting your design system components in code with your design system in Figma",
  "keywords": [],
  "author": "Figma",
  "license": "MIT",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/figma/code-connect.git"
  },
  "homepage": "https://github.com/figma/code-connect#readme",
  "bin": {
    "figma": "bin/figma"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "build:web": "pnpm build",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:fast": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --testPathIgnorePatterns template_rendering.test.ts",
    "test-ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --runInBand",
    "bundle": "npm run build && npm pack && mkdir -p bundle && mv figma-code-connect*.tgz bundle",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.17.0",
    "@types/node": "^18.17.1",
    "@types/react": "18.0.26",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "react": "18.2.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0"
  },
  "dependencies": {
    "@babel/core": "^7.23.6",
    "@babel/generator": "^7.23.6",
    "@babel/parser": "^7.23.6",
    "@babel/types": "^7.23.6",
    
    "@storybook/csf-tools": "^7.6.7",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "lodash": "^4.17.21",
    "minimatch": "^9.0.3",
    "prettier": "^3.2.4",
    "typescript": "5.4.2"
  }
}
